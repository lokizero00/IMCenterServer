<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loki.server.dao.TradeReportDao">
  <cache eviction="LRU" type="com.loki.server.cache.RedisCache"/>
  <resultMap id="tradeReportDao" type="com.loki.server.entity.TradeReport">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="creator_id" jdbcType="INTEGER" property="creatorId" />
    <result column="trade_id" jdbcType="INTEGER" property="tradeId" />
    <result column="informer_id" jdbcType="INTEGER" property="informerId" />
    <result column="delinquent_id" jdbcType="INTEGER" property="delinquentId" />
    <result column="status" jdbcType="VARCHAR" property="status" />
    <result column="verify_time" jdbcType="TIMESTAMP" property="verifyTime" />
    <result column="admin_verifier_id" jdbcType="INTEGER" property="adminVerifierId" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id,create_time,update_time,creator_id,trade_id,informer_id,delinquent_id,status,verify_time,admin_verifier_id
  </sql>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.loki.server.entity.TradeReport">
		insert into trade_report(create_time,creator_id,trade_id,informer_id,delinquent_id,status) 
		values(now(),#{creatorId},#{tradeId},#{informerId},#{delinquentId},#{status})
	</insert>

  <update id="update" parameterType="com.loki.server.entity.TradeReport">
  	update trade_report SET update_time=now(),trade_id=#{tradeId},informer_id=#{informerId},delinquent_id=#{delinquentId},status=#{status},verify_time=#{verifyTime},admin_verifier_id=#{adminVerifierId} where id=#{id}
  </update>
  
  <select id="findById" parameterType="int" resultMap="tradeReportDao">
		select <include refid="Base_Column_List" /> 
		from trade_report
		where id=#{_parameter}
  </select>
  
  <select id="findAll" resultMap="tradeReportDao">
		select <include refid="Base_Column_List" /> 
		from trade_report
  </select>
  
  <delete id="delete" parameterType="int">
		delete from trade_report where id=#{_parameter}
	</delete>
</mapper>