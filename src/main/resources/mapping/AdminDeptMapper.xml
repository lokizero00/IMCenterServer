<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loki.server.dao.AdminDeptDao">
  <cache eviction="LRU" type="com.loki.server.cache.RedisCache"/>
  <resultMap id="adminDeptDao" type="com.loki.server.model.AdminDept">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="admin_id" jdbcType="INTEGER" property="adminId" />
    <result column="dept_id" jdbcType="INTEGER" property="deptId" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id,admin_id,dept_id
  </sql>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.loki.server.model.AdminDept">
		insert into admin_dept(admin_id,dept_id) 
		values(#{adminId},#{deptId})
	</insert>

  <update id="update" parameterType="com.loki.server.model.AdminDept">
  	update admin_dept SET admin_id=#{adminId},dept_id=#{deptId} where id=#{id}
  </update>
  
  <select id="findById" parameterType="int" resultMap="adminDeptDao">
		select <include refid="Base_Column_List" /> 
		from admin_dept
		where id=#{_parameter}
  </select>
  
  <select id="findAll" resultMap="adminDeptDao">
		select <include refid="Base_Column_List" /> 
		from admin_dept
  </select>
  
  <delete id="delete" parameterType="int">
		delete from admin_dept where id=#{_parameter}
	</delete>
</mapper>