<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loki.server.dao.RoleResourceDao">
  <cache eviction="LRU" type="com.loki.server.cache.RedisCache"/>
  <resultMap id="roleResourceDao" type="com.loki.server.model.RoleResource">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="role_id" jdbcType="INTEGER" property="roleId" />
    <result column="resource_id" jdbcType="INTEGER" property="resourceId" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id,role_id,resource_id
  </sql>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.loki.server.model.RoleResource">
		insert into role_resource(role_id,resource_id) 
		values(#{roleId},#{resourceId})
	</insert>

  <update id="update" parameterType="com.loki.server.model.RoleResource">
  	update role_resource SET role_id=#{roleId},resource_id=#{resourceId} where id=#{id}
  </update>
  
  <select id="findById" parameterType="int" resultMap="roleResourceDao">
		select <include refid="Base_Column_List" /> 
		from role_resource
		where id=#{_parameter}
  </select>
  
  <select id="findAll" resultMap="roleResourceDao">
		select <include refid="Base_Column_List" /> 
		from role_resource
  </select>
  
  <delete id="delete" parameterType="int">
		delete from role_resource where id=#{_parameter}
	</delete>
</mapper>