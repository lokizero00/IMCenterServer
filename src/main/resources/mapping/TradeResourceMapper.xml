<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loki.server.dao.TradeResourceDao">
  <cache eviction="LRU" type="com.loki.server.cache.RedisCache"/>
  <resultMap id="tradeResourceDao" type="com.loki.server.model.TradeResource">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="admin_creator_id" jdbcType="INTEGER" property="adminCreatorId" />
    <result column="admin_updater_id" jdbcType="INTEGER" property="adminUpdaterId" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id,create_time,update_time,admin_creator_id,admin_updater_id,type,name
  </sql>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.loki.server.model.TradeResource">
		insert into trade_resource(create_time,admin_creator_id,type,name) 
		values(now(),#{adminCreatorId},#{type},#{name})
	</insert>

  <update id="update" parameterType="com.loki.server.model.TradeResource">
  	update trade_resource SET update_time=now(),admin_updater_id=#{adminUpdaterId},type=#{type},name=#{name} where id=#{id}
  </update>
  
  <select id="findById" parameterType="int" resultMap="tradeResourceDao">
		select <include refid="Base_Column_List" /> 
		from trade_resource
		where id=#{_parameter}
  </select>
  
  <select id="findAll" resultMap="tradeResourceDao">
		select <include refid="Base_Column_List" /> 
		from trade_resource
  </select>
  
  <delete id="delete" parameterType="int">
		delete from trade_resource where id=#{_parameter}
	</delete>
</mapper>